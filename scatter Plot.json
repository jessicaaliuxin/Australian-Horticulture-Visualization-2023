{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Scatter plot of production vs. farm gate value for nut",
  "title": {
    "text": "Production vs. Farm Gate Value of Nuts (2022-23)",
    "fontSize": 16,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/jessicaaliuxin/Australian-Horticulture-Visualization-2023/refs/heads/main/Restructured_Nut_Data.csv",
    "format": {"type": "csv"}
  },
  "mark": {
    "type": "point",
    "size": 600,
    "filled": true
  },
  "encoding": {
    "x": {
      "field": "Production (t)",
      "type": "quantitative",
      "title": "Production (tons)",
      "axis": {
        "gridColor": "#e5e4eb",   
        "gridWidth": 1        
      }
    },
    "y": {
      "field": "Farm gate value ($m)",
      "type": "quantitative",
      "title": "Farm gate value (million $)",
      "axis": {
        "gridColor":  "#e5e4eb",  
        "gridWidth": 1       
      }
    },
    "color": {
      "field": "Region",
      "type": "nominal",
      "title": "Region",
      "scale": {
        "scheme": "category10"
      },
      "legend": {
        "orient": "right",
        "offset": 55  
      }
    },

    "shape": {
      "field": "Commodity",
      "type": "nominal",
      "title": "Commodity",
      "legend": {
        "orient": "right",
        "offset": 55
      }
    },
    "tooltip": [
      {"field": "Region", "type": "nominal"},
      {"field": "Commodity", "type": "nominal"},
      {"field": "Production (t)", "type": "quantitative"},
      {"field": "Farm gate value ($m)", "type": "quantitative"}
    ]
  },
  "config": {
    "background": null,          
    "axis": {
      "labelFontSize": 12,       
      "titleFontSize": 12,        
      "grid": true,              
      "gridDash": [1, 0]         
    }
  }
}
