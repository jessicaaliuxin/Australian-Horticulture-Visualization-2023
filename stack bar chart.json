{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Farm Gate Value by State (2022-23)",
    "fontSize": 16,
    "anchor": "start"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/jessicaaliuxin/Australian-Horticulture-Visualization-2023/main/Table_1_cleaned.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "filter": "datum.Region != 'Australia' && datum['Data item'] != 'Total of Farm gate value ($m)' && datum['Data item'] != 'Total Farm gate value($m)' && datum['Data item'] != 'Total Farm gate value ($m)'"
    },
    {
      "calculate": "replace(datum['Data item'], ' - Farm gate value ($m)', '')",
      "as": "Data item"
    }
  ],
  "mark": "bar",
  "width": 800,
  "height": 400,
  "background": null,
  "encoding": {
    "x": {
      "field": "Region",
      "type": "nominal",
      "axis": {
        "labelAngle": -45,
        "title": "State"
      }
    },
    "y": {
      "field": "2022-23",
      "type": "quantitative",
      "axis": {
        "title": "Farm Gate Value ($m)"
      }
    },
    "color": {
      "field": "Data item",
      "type": "nominal",
      "legend": {
        "title": "Data Item",
        "offset": -5           // 向左移动以减少遮挡
      }
    },
    "tooltip": [
      {"field": "Region", "type": "nominal", "title": "State"},
      {"field": "Data item", "type": "nominal", "title": "Category"},
      {"field": "2022-23", "type": "quantitative", "title": "Farm Gate Value ($m)"}
    ]
  }
}
